<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1F"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/testlinear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/frizquadrata"
        android:textColor="#C1AD78"
        android:textSize="23sp"
        android:text="Nick" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/frizquadrata"
        android:textColor="#C1AD78"
        android:textSize="20sp"
        android:text="Level" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/infframe" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="360dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="551dp"
        app:srcCompat="@drawable/masteryframe" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_width="2dp"
        app:civ_border_color="#C89440"/>


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mastery2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_width="3dp"
        app:civ_border_color="#767474"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mastery1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_width="3dp"
        app:civ_border_color="#998041"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mastery3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="270dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_width="3dp"
        app:civ_border_color="#774B22"/>

    <TextView
        android:id="@+id/mastery1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="655dp"
        android:textSize="18sp"
        android:fontFamily="@font/frizquadrata"
        android:textColor="#C1AD78"
        android:text="1 500 000" />

    <TextView
        android:id="@+id/mastery2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="655dp"
        android:textSize="18sp"
        android:fontFamily="@font/frizquadrata"
        android:textColor="#C1AD78"
        android:text="65 000" />

    <TextView
        android:id="@+id/mastery3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="655dp"
        android:textSize="18sp"
        android:fontFamily="@font/frizquadrata"
        android:textColor="#C1AD78"
        android:text="11 000" />

</RelativeLayout>